/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/*间隔条*/
.divider{
  height:20rpx;
  background:#f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0,0,0,0.1) inset;
}
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;            /*上下居中*/
}
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform: rotate(45deg);
}
/*列表*/
.cell{
  background:#fff;
  font-size:16px;
}
.cell-item{
  border-bottom:1rpx solid #ddd;
  padding:30rpx 20rpx;
}
/*打分*/
.star-before{
  color:#e2e2e2;
}
.star-after{
  color:#f90;
  position: absolute;
  top:0;
  left:0;
  width:90%;
  overflow: hidden;
}
