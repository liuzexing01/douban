/* pages/home/home.wxss */
.slider,.slider image,.slider swiper{
  width:100%;
  height:400rpx;  /* 图片测量出结果 */
}
.title{
  font-size: 18px;
  color:#666;
  padding:10rpx 20rpx;
  border-bottom:1px solid #999;
  box-shadow: 5rpx 5rpx 8rpx;
  margin:30rpx 5rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  display: -webkit-box; 
  flex-direction: column;
}
.movies {
  width:48%;
  box-sizing: border-box;
  margin:20rpx 1%;
  padding:10rpx;
  overflow: hidden;
  position:relative;
}
.movies image{
  width:335rpx;
  border-radius: 20rpx;
}
.movies .mtitle{
  font-size: 16px;
  color:#333;
}
.movies .leibie{
  border:1px solid #666;
  border-radius: 10rpx;
  margin:5rpx 10rpx;
  font-size: 12px;
  padding:0 5rpx;
  color:#666;
}
.movies .pinfen{
  position:absolute;
  bottom:115rpx;
  right:16rpx;
  background:rgba(0,0,0,0.5);
  width:86%;
  text-align: right;
  padding-right: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 15px;
  color:white;
}
.search{
  display: flex;
  align-items: center;
  justify-content: center;
  height:100rpx;
  color:#999;
  padding:10rpx 20rpx;
  border-bottom:1px solid #999;
  box-shadow: 5rpx 5rpx 8rpx;
  margin:30rpx 5rpx;
}
.search input{
  border:1px solid #ddd;
  padding:5rpx 10rpx;
  height: 50rpx;
  font-size: 16px;
  margin:0 2%;
  width:75%;
}
.search button{
  height:70rpx;
  font-size:15px;
  color:#666;
  line-height: 70rpx;
}
